<!DOCTYPE html>
<html>
  <head>
    <title>BookMemo</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

    <style type="text/css" href="./style.css"></style>
   <!-- Compiled and minified CSS -->
<!--   <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.100.2/css/materialize.min.css"> -->
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Roboto:regular,bold,italic,thin,light,bolditalic,black,medium&amp;amp;lang=en" rel="stylesheet">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link href="https://code.getmdl.io/1.3.0/material.indigo-pink.min.css" rel="stylesheet">


<script
  src="https://code.jquery.com/jquery-3.3.1.js"
  integrity="sha256-2Kok7MbOyxpgUVvAk/HJ2jigOSYS2auK4Pfzbm7uH60="
  crossorigin="anonymous"></script>
  <!-- Compiled and minified JavaScript -->
  <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0-beta/js/materialize.min.js"></script>
  <body>
    <nav>
      <div class="nav-wrapper grey darken-3">
        <%= link_to "" ,data: {target: "slide-out"},class: "sidenav-trigger show-on-large" do %>
          <i class="material-icons">menu</i>
        <% end %>
        <%= link_to root_path  do %>
          BOT de MEMO
        <% end %>
      </div>
    </nav>

    <ul id="slide-out" class="sidenav">
      <% if user_signed_in? %>
        <li><%= link_to "投稿する", "/tweets/new" ,class: "get" %> </li>
        <li><%= link_to "サインアウト", destroy_user_session_path, method: :delete %></li>
        <li>
          <%= link_to user_path(current_user) do %>
            <i class="material-icons left">person</i>
          <% end %>
        </li>
    <% end %>
      <li><a href="/books"><i class="material-icons">search</i></a></li>
      <%= link_to books_path do %>
        <i class="material-icons">view_module</i>
      <% end %>
      <li><a href="collapsible.html"><i class="material-icons">refresh</i></a></li>
      <li><a href="mobile.html"><i class="material-icons">more_vert</i></a></li>
    </ul>
    <%= yield %>
  </body>
</html>

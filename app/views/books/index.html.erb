<div class="container">
  <div class="section">
    <div class="row">
        <div class="col s12">
            <div class="col s12">
                <%= form_with url: "/books/new" , :method => 'get' do |f| %>
                  <%= f.text_field :form_word ,class: "books-input", placeholder: 'タイトル・著者で検索' %>
                  <%= button_tag type: "submit" do %>
                    <i class="material-icons prefix">search</i>
                  <% end %>
                <% end %>
            </div>
            <div id="book-search-result">
            </div>
        </div>
    </div>
  </div>
</div>
